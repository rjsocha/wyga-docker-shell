FROM alpine:3 AS mold
RUN apk --no-cache -U upgrade
RUN apk --no-cache add bash coreutils findutils tar docker-cli docker-cli-buildx jq wget curl git sed gawk diffutils
COPY --chmod=755 entrypoint.sh /.entrypoint/docker-shell
FROM scratch
COPY --from=mold / /
ENTRYPOINT ["/.entrypoint/docker-shell"]
CMD ["bash"]
